<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked holati uchun -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/checkedColor" /> <!-- Belgilangan holat uchun to'liq rang -->
        </shape>
    </item>

    <!-- Unchecked holati uchun (ko'rinadigan chegaraga ega bo'ladi) -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- To'liq shaffof -->
            <stroke android:width="4dp" android:color="@color/strokeColor" /> <!-- Chegara rangi -->
        </shape>
    </item>
</selector>

